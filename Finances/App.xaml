             xmlns:local="clr-namespace:Finances">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/../Temporary/Resources/Icons.xaml"></ResourceDictionary>
