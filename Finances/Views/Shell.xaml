<controls:MetroWindow x:Class="Finances.Views.Shell" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:viewModels="clr-namespace:Finances.ViewModels" 
					  Width="1000" Height="800"
                      WindowState="Maximized" ShowIconOnTitleBar="True">

	<TabControl x:Name="Items" TabStripPlacement="Left">
		<TabControl.ItemTemplate>
			<DataTemplate DataType="viewModels:Tracker">
				<TextBlock FontWeight="Light" FontSize="40" Margin="10" VerticalAlignment="Center">
					<Run Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets" />
					<Run Text="{Binding DisplayName}" />
				</TextBlock>
			</DataTemplate>
		</TabControl.ItemTemplate>
	</TabControl>

</controls:MetroWindow>