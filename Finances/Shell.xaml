<Controls:MetroWindow x:Class="Finances.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.codeplex.com/prism"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
	Title="Finances" Height="800" Width="1000">
	<Grid>
		<Grid.RowDefinitions >
			<RowDefinition Height="600" />
			<RowDefinition Height="200" />
		</Grid.RowDefinitions>

		<TabControl Grid.Row="0" Grid.Column="0" SelectedIndex="0" TabStripPlacement="Left">
			<TabItem Name="Tracker" Header="Tracker" cal:RegionManager.RegionName="Tracker"></TabItem>
			<TabItem Name="Visualization" Header="Visualization" cal:RegionManager.RegionName="Visualization"></TabItem>
		</TabControl>
		<ContentControl Grid.Row="1" Grid.Column="0" Name="AddRecord" cal:RegionManager.RegionName="AddRecord"></ContentControl>
	</Grid>

</Controls:MetroWindow>
