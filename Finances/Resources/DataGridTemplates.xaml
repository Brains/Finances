<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

<!--	<CollectionViewSource x:Key="RecordsGrouped"  IsSourceGrouped="True" ItemsPath="Activities"/>-->

	<!-- GroupHeaderTemplate -->
	<DataTemplate x:Key="GroupHeaderTemplate">
		<TextBlock Text="{Binding Path=Name}" Foreground="LightGray" Margin="0,20,0,0" />
	</DataTemplate>
	
	<!-- CellWithIconTemplate -->
	<DataTemplate x:Key="CellWithIconTemplate">
		<StackPanel Orientation="Horizontal">
			<Grid Width="16" Height="16">
				<Grid.Background>
					<VisualBrush
						Visual="{Binding Path=Category, Converter={StaticResource categoryToIcon}}"
						Stretch="Uniform" />
				</Grid.Background>
			</Grid>
			<TextBlock Text="{Binding Path=Category}" Margin="10,0,0,0" />
		</StackPanel>
	</DataTemplate>
</ResourceDictionary>