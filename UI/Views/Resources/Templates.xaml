<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:UI.Views.Converters">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Resources/Icons/Modern.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
	
    <DataTemplate x:Key="EnumTemplate">
		<StackPanel  Orientation="Horizontal">
			<Rectangle Width="20" Height="20" Fill="Orange">
                <Rectangle.OpacityMask>
					<VisualBrush Visual="{StaticResource appbar_adobe_acrobat}" />
				</Rectangle.OpacityMask>
			</Rectangle>
            <TextBlock Text="{Binding}" Foreground="{Binding Converter={converters:EnumToColor}}" FontSize="16" Margin = "10,0,0,0" />
		</StackPanel>
	</DataTemplate>
</ResourceDictionary>