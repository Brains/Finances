<UserControl x:Class="UI.Views.Trend" 
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:charts="clr-namespace:De.TorstenMandelkow.MetroChart;assembly=De.TorstenMandelkow.MetroChart" 
			 mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="800">
	<ScrollViewer>

        <charts:ClusteredColumnChart Name="Transactions" ChartTitle="Test" ChartSubTitle="Test" Background="White" IsRowColumnSwitched="True">
			<charts:ClusteredColumnChart.Series>
                <charts:ChartSeries ItemsSource="{Binding Transactions}" SeriesTitle="Test" DisplayMember="Date" ValueMember="Amount" />
			</charts:ClusteredColumnChart.Series>
		</charts:ClusteredColumnChart>

	</ScrollViewer>
</UserControl>