<controls:MetroWindow x:Class="UI.Views.Shell" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:vm="clr-namespace:UI.ViewModels"
                      Width="1000" Height="800"
                      WindowState="Maximized" ShowIconOnTitleBar="True">

	<TabControl x:Name="Items" TabStripPlacement="Left">
		<TabControl.Resources>
            <Style TargetType="{x:Type TabPanel}">
                <Setter Property="Background" Value="{StaticResource AccentColorBrush}"></Setter>
            </Style>
        </TabControl.Resources>
		<TabControl.ItemTemplate>
			<DataTemplate DataType="vm:Tracker">
				<TextBlock FontWeight="Light" FontSize="40" Margin="10" VerticalAlignment="Center" Foreground="White" >
					<Run Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets" />
					<Run Text="{Binding DisplayName}" />
				</TextBlock>
			</DataTemplate>
		</TabControl.ItemTemplate>
	</TabControl>

</controls:MetroWindow>