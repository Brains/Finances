<UserControl x:Class="UI.Views.FormsQueue" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
	<UserControl.Resources>
		<DataTemplate x:Key="FormTemplate">
            <StackPanel Orientation="Horizontal">
	            <ComboBox Name="Type" />
	            <TextBox Name="Amount" />
	            <ComboBox Name="Category" />
				<TextBox Name="Description" />
			</StackPanel>
		</DataTemplate>
	</UserControl.Resources>
	
	<StackPanel Orientation="Horizontal">
		<ListBox Name="Forms" ItemTemplate="{StaticResource FormTemplate}" />
		<StackPanel>
			<Button Name="Add">Add</Button>
			<Button Name="Remove">Remove</Button>
			<Button Name="Submit">Submit</Button>
		</StackPanel>
	</StackPanel>
	
</UserControl>