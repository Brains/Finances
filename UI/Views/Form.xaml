<UserControl x:Class="UI.Views.Form"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:UI.Views.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Templates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <ComboBox Name="Types" ItemTemplate="{StaticResource EnumTemplate}" />
        <TextBox Name="Amount" Foreground="{Binding Path=SelectedType, Converter={converters:EnumToColor}}"/>
        <ComboBox Name="Categories" ItemTemplate="{StaticResource EnumTemplate}" />
        <TextBox Name="Description" Foreground = "DimGray" />
    </StackPanel>
</UserControl>
