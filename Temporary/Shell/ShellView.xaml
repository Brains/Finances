<controls:MetroWindow  x:Class="Temporary.Shell.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:records="clr-namespace:Temporary.Records">

    <Window.Resources>
        <DataTemplate x:Key = "TabItemHeaderDataTemplate" >
            <TextBlock Text = "{Binding Header, RelativeSource={RelativeSource AncestorType=TabItem}}" FontWeight = "Light"
			           FontSize = "40" Margin = "10" />
        </DataTemplate>
    </Window.Resources>

    <TabControl SelectedIndex = "0" TabStripPlacement = "Left" >
        <TabItem Name = "Statistics" Header = "Statistics" HeaderTemplate = "{StaticResource TabItemHeaderDataTemplate}">
            <records:FormsQueueView></records:FormsQueueView>
		</TabItem>
        <TabItem Name = "Tracker" Header = "Tracker" HeaderTemplate = "{StaticResource TabItemHeaderDataTemplate}"></TabItem>
        <TabItem Name = "Trends" Header = "Trends" HeaderTemplate = "{StaticResource TabItemHeaderDataTemplate}"/>
    </TabControl>

</controls:MetroWindow>