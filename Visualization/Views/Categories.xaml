<UserControl x:Class = "Visualization.Views.Categories" xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008" xmlns:local = "clr-namespace:Visualization"
             xmlns:charting = "clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
             mc:Ignorable = "d" d:DesignHeight = "300" d:DesignWidth = "300" >
	<Grid Margin="0,0,-152,-294">
		<charting:Chart x:Name="chart" Width="350" Height="250">
			<charting:Chart.Series>
				<charting:PieSeries ItemsSource="{Binding}"
                    DependentValuePath="Value"
                    IndependentValuePath="Key"
                    Title="Pet Preference" IsSelectionEnabled="True" />
			</charting:Chart.Series>
		</charting:Chart>
	</Grid>
</UserControl>