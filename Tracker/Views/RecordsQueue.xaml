<UserControl x:Class = "Tracker.Views.RecordsQueue"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable = "d" >


	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source = "AddRecord.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>


	<StackPanel Orientation = "Vertical" >
		<Button Command = "{Binding AddRecordCommand}"
		        Content = "Add"
		        HorizontalAlignment = "Left" 
		        Style = "{StaticResource AccentedSquareButtonStyle}"
		        BorderThickness = "0"
				Margin="5"
				/>
		<Button Content = "Submit"
		        Command = "{Binding SubmitCommand}"
		        HorizontalAlignment = "Left"
		        Style = "{StaticResource AccentedSquareButtonStyle}"
		        BorderThickness = "0"
				Margin="5"
		        IsDefault = "True" />
		<ItemsControl ItemsSource = "{Binding Records}"
		              ItemTemplate = "{StaticResource AddRecordTemplate}"
		              HorizontalContentAlignment = "Stretch" />
	</StackPanel>

</UserControl>